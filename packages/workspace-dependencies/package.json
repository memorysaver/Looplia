{
	"name": "@repo/workspace-dependencies",
	"version": "0.1.3",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"exports": {
		"./zx": {
			"import": "./src/zx.ts",
			"require": {
				"require": "./dist/zx.cjs",
				"types": "./dist/zx.d.ts"
			}
		},
		"./yaml": {
			"import": "./src/yaml.ts",
			"require": {
				"require": "./dist/yaml.cjs",
				"types": "./dist/yaml.d.ts"
			}
		},
		"./zod": {
			"import": "./src/zod.ts",
			"require": {
				"require": "./dist/zod.cjs",
				"types": "./dist/zod.d.ts"
			}
		},
		"./slugify": {
			"import": "./src/slugify.ts",
			"require": {
				"require": "./dist/slugify.cjs",
				"types": "./dist/slugify.d.ts"
			}
		}
	},
	"scripts": {
		"build": "runx build lib zx.ts yaml.ts zod.ts slugify.ts -d src -f cjs --platform node",
		"check:lint": "run-eslint",
		"check:types": "run-tsc",
		"test": "run-vitest"
	},
	"dependencies": {
		"esbuild": "0.25.5",
		"slugify": "1.6.6",
		"wrangler": "4.22.0",
		"yaml": "2.8.0",
		"zod": "3.25.67",
		"zx": "8.6.0"
	},
	"devDependencies": {
		"@repo/tools": "workspace:*",
		"vitest": "3.2.4"
	}
}
